{
  "name": "vite-powerflow",
  "private": true,
  "version": "1.1.0",
  "description": "A React + Vite starter, fully containerized for reproducible and collaborative development, with strict code quality tooling and AI pair programming workflow (Cursor rules). Includes comprehensive testing, linting, and CI/CD configurations following industry best practices.",
  "author": {
    "name": "Shynn",
    "url": "http://github.com/shynnobi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shynnobi/vite-powerflow.git"
  },
  "homepage": "https://vite-powerflow.netlify.app",
  "bugs": {
    "url": "https://github.com/shynnobi/vite-powerflow/issues"
  },
  "license": "MIT",
  "keywords": [
    "vite",
    "react",
    "typescript",
    "tailwindcss",
    "shadcn-ui",
    "starter-template",
    "zustand",
    "tanstack-query",
    "vitest",
    "playwright",
    "storybook",
    "eslint",
    "prettier",
    "development-workflow",
    "devcontainer",
    "husky",
    "testing"
  ],
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "predev": "pnpm generate-aliases",
    "build": "npx turbo run build",
    "prepare": "husky",
    "postinstall": "./scripts/postinstall.sh",
    "generate:barrels": "tsx scripts/generate-barrels.ts",
    "generate:aliases": "tsx scripts/generate-vite-aliases.ts",
    "inline:shared-utils": "tsx scripts/inline-shared-utils.ts",
    "generate:app": "tsx scripts/generate-app-package.ts app",
    "generate:package": "tsx scripts/generate-app-package.ts package",
    "test": "npx turbo run test",
    "test:e2e": "npx turbo run test:e2e",
    "test:all": "npx turbo run test && npx turbo run test:e2e",
    "test:coverage": "npx turbo run test:coverage",
    "test:coverage:report": "npx turbo run test:coverage:report",
    "lint": "npx turbo run lint",
    "lint:fix": "npx turbo run lint:fix",
    "lintstaged:dry": "HUSKY=0 lint-staged --allow-empty && pnpm test",
    "format": "npx turbo run format",
    "format:fix": "npx turbo run format:fix",
    "fix": "npx turbo run fix",
    "type-check": "npx turbo run type-check",
    "root-scripts:format": "prettier --check scripts",
    "root-scripts:format:fix": "prettier --write scripts",
    "root-scripts:lint": "eslint scripts --ext .ts",
    "root-scripts:typecheck": "tsc --noEmit --project tsconfig.scripts.json",
    "root-scripts:static": "run-s root-scripts:format root-scripts:lint root-scripts:typecheck",
    "validate:static": "npx turbo run lint && npx turbo run format && npx turbo run type-check",
    "validate:quick": "npx turbo run lint && npx turbo run format && npx turbo run test",
    "validate:commit": "npx lint-staged --config .lintstagedrc.cjs && pnpm test",
    "validate:full": "pnpm root-scripts:static && npx turbo run lint && npx turbo run format && npx turbo run test && npx turbo run test:e2e && pnpm build",
    "cli:build": "pnpm --filter @vite-powerflow/create build",
    "cli:start": "node packages/cli/dist/index.js",
    "cli:build-start": "pnpm cli:build && pnpm cli:start",
    "cli:sync-build-start": "pnpm sync:starter-to-template && pnpm cli:build && pnpm cli:start",
    "starter:dev": "pnpm -filter @vite-powerflow/starter dev",
    "starter:storybook": "pnpm --filter @vite-powerflow/starter storybook",
    "web:dev": "pnpm -filter @vite-powerflow/website dev",
    "web:storybook": "pnpm -filter @vite-powerflow/website storybook",
    "extension:test": "pnpm --filter vite-powerflow-sync run test",
    "extension:build": "pnpm --filter vite-powerflow-sync run compile",
    "extension:pack": "pnpm --filter vite-powerflow-sync run package",
    "extension:install": "tsx scripts/install-extension.ts",
    "extension:ship": "run-s extension:build extension:pack extension:install",
    "sync:starter-to-template": "tsx scripts/sync-starter-to-template.ts",
    "changeset:augment": "tsx scripts/augment-changeset.ts",
    "changeset:create": "pnpm changeset && pnpm changeset:augment",
    "release:prepare": "changeset version && pnpm sync:starter-to-template",
    "release:publish": "pnpm build && changeset publish",
    "release:complete": "pnpm release:publish && pnpm release:update-baselines",
    "release:update-baselines": "tsx scripts/update-baselines.ts",
    "ci:local": "git clean -fdx && pnpm install --frozen-lockfile && CI=true ./scripts/ci.sh"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "enquirer": "^2.4.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@awalgawe/esbuild-typescript-paths-plugin": "^1.0.1",
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.31.0",
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.11.0",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^9.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "add": "^2.0.6",
    "chalk": "^5.4.1",
    "dir-compare": "^5.0.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "9.0.16",
    "eslint-plugin-vitest": "^0.5.4",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^16.1.2",
    "listr2": "^8.3.3",
    "npm-run-all": "^4.1.5",
    "ora": "^8.2.0",
    "pnpm": "^10.13.1",
    "prettier": "^3.6.2",
    "tmp-promise": "^3.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild",
      "msw"
    ],
    "onlyBuiltDependencies": [
      "keytar",
      "sharp",
      "unrs-resolver"
    ]
  }
}
