{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@vite-powerflow/create": ["packages/cli/src"],
      "@vite-powerflow/create/*": ["packages/cli/src/*"],
      "@vite-powerflow/shared-utils": ["packages/shared-utils/src"],
      "@vite-powerflow/shared-utils/*": ["packages/shared-utils/src/*"],
      "vite-powerflow-sync": ["packages/vite-powerflow-sync/src"],
      "vite-powerflow-sync/*": ["packages/vite-powerflow-sync/src/*"]
    }
  }
}
