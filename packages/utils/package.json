{
  "name": "@vite-powerflow/utils",
  "private": false,
  "version": "0.0.1",
  "description": "Internal utility functions for the Vite PowerFlow project",
  "type": "module",
  "scripts": {
    "generate:barrels": "tsx ../../scripts/generate-barrels.ts",
    "prebuild": "pnpm run generate:barrels",
    "build": "pnpm run prebuild && tsx src/build.ts && tsc --emitDeclarationOnly --outDir dist",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "fix": "prettier --write . && eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "sync:starter-to-template": "tsx ../../scripts/sync-starter-to-template.ts"
  },
  "keywords": [
    "utils",
    "utility",
    "helpers",
    "nodejs",
    "typescript",
    "javascript",
    "functions",
    "toolkit"
  ],
  "author": {
    "name": "Shynn",
    "url": "http://github.com/shynnobi"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "esbuild": "^0.25.6",
    "fs-extra": "^11.3.0",
    "tmp-promise": "^3.0.3",
    "vitest": "^1.6.1"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "find-up": "^7.0.0",
    "inquirer": "^9.3.7",
    "ora": "^8.2.0",
    "simple-git": "^3.28.0"
  }
}
