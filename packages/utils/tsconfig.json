{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": "src"
  },
  "include": ["src/**/*", "src/**/*.test.ts", "src/**/*.spec.ts", "src/build.ts"],
  "exclude": ["node_modules"]
}
